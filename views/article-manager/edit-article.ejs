                <label for="image">Image</label>
                <input 
                    type="file" 
                    name="image" 
                    id="image" >
            </div>-->
            <!--<div class="form-control">
                <label for="price">Article Abstract</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'articleAbstract') ? 'invalid' : '' %>" 
                    type="number"
                    name="articleAbstract" 
                    id="price" 
                    step="0.01" 
                    value="<% if (editing || hasError) { %><%= article.articleAbstract %><% } %>">
            </div>-->
            
            <div class="form-control">
                <label for="description">Article Abstract</label>
                <textarea 
                    class="<%= validationErrors.find(e => e.param === 'articleAbstract') ? 'invalid' : '' %>"
                    name="articleAbstract" 
                    id="description" 
                    rows="5"><% if (editing || hasError) { %><%= article.articleAbstract %><% } %></textarea>
            </div>
            <div class="form-control">
                <label for="description">Article Body</label>
                <textarea 
                    class="<%= validationErrors.find(e => e.param === 'articleBody') ? 'invalid' : '' %>"
                    name="articleBody" 
                    id="description" 
                    rows="5"><% if (editing || hasError) { %><%= article.articleBody %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= article._id %>" name="articleId">
            <% } %>

            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit"><% if (editing) { %>Update Article<% } else { %>Add Article<% } %></button>
        </form>
    </main>
