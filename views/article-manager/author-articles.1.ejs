<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <!--<%- include('../includes/navigation.ejs') %>-->

            <main>
                <!----><% if (artcls.length > 0) { %>
                    <div class="grid">
                        <% for (let article of artcls) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= article.title %>
                                    </h1>
                                </header>
                                <!--
                                <div class="card__image">
                                    <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
                                </div>
                                -->
                                <div class="card__content">
                                    <h2 class="product__price">$
                                        <%= article.articleAbstract %>
                                    </h2>
                                    <p class="product__description">
                                        <%= article.articleBody %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/edit-article/<%= article._id %>?edit=true" class="btn">Edit</a>
                                    <input type="hidden" value="<%= article._id %>" name="articleId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn" type="button" onclick="deleteProduct(this)">Delete</button>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Articles for you Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/public/js/admin.js"></script>